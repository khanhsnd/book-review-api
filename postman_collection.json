{
  "info": {
    "name": "Book Review API",
    "description": "Complete Postman collection for testing all Book Review API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "General Users (No Auth)",
      "item": [
        {
          "name": "Task 1: Get All Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books"]
            }
          }
        },
        {
          "name": "Task 2: Get Book by ISBN",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books/isbn/978-0-7475-3269-9",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "isbn", "978-0-7475-3269-9"]
            }
          }
        },
        {
          "name": "Task 3: Get Books by Author",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books/author/J.K. Rowling",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "author", "J.K. Rowling"]
            }
          }
        },
        {
          "name": "Task 4: Get Books by Title",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books/title/Harry Potter",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "title", "Harry Potter"]
            }
          }
        },
        {
          "name": "Task 5: Get Book Reviews",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books/1/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "1", "reviews"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Task 6: Register New User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newuser\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Task 7: Login User (JWT)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Task 7: Login User (Session)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login/session",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login", "session"]
            }
          }
        }
      ]
    },
    {
      "name": "Registered Users (JWT Auth)",
      "item": [
        {
          "name": "Task 8: Add Book Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"comment\": \"Excellent book! Highly recommended.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/books/1/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "1", "reviews"]
            }
          }
        },
        {
          "name": "Task 8: Modify Book Review",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 4,\n  \"comment\": \"Updated review comment\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/books/reviews/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "reviews", "1"]
            }
          }
        },
        {
          "name": "Task 9: Delete Book Review",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/books/reviews/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "reviews", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Node.js Methods (Async/Promises)",
      "item": [
        {
          "name": "Task 10: Get All Books (Async Callback)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/external/books/callback",
              "host": ["{{baseUrl}}"],
              "path": ["api", "external", "books", "callback"]
            }
          }
        },
        {
          "name": "Task 11: Search by ISBN (Promise)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/external/books/isbn/978-0-7475-3269-9/promise",
              "host": ["{{baseUrl}}"],
              "path": ["api", "external", "books", "isbn", "978-0-7475-3269-9", "promise"]
            }
          }
        },
        {
          "name": "Task 12: Search by Author (Async/Await)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/external/books/author/J.K. Rowling/async",
              "host": ["{{baseUrl}}"],
              "path": ["api", "external", "books", "author", "J.K. Rowling", "async"]
            }
          }
        },
        {
          "name": "Task 13: Search by Title (Promise)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/external/books/title/Harry Potter/promise",
              "host": ["{{baseUrl}}"],
              "path": ["api", "external", "books", "title", "Harry Potter", "promise"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "jwtToken",
      "value": "your-jwt-token-here"
    }
  ]
} 